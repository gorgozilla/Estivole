	<authorUrl>www.joomla.org</authorUrl>
	<version>3.0.0</version>
	<description>PLG_USER_PROFILESTIVOLE_XML_DESCRIPTION</description>
 
	<files>
		<filename plugin="profilestivole">profilestivole.php</filename>
		<filename>index.html</filename>
		<folder>profiles</folder>
	</files>
 
	<languages>
		<language tag="en-GB">fr-FR.plg_user_profilestivole.ini</language>
		<language tag="en-GB">fr-FR.plg_user_profilestivole.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
 
			<fieldset name="basic">
 
				<field name="profile-require-user" type="spacer" label="PLG_USER_PROFILESTIVOLE_FIELD_NAME_PROFILE_REQUIRE_USER" />
				
				<field name="profile-require_firstname" type="list"
					description="PLG_USER_PROFILESTIVOLE_FIELD_FIRSTNAME_DESC"
					label="PLG_USER_PROFILESTIVOLE_FIELD_FIRSTNAME_LABEL">
					<option value="2">JOPTION_REQUIRED</option>
					<option value="1">JOPTION_OPTIONAL</option>
					<option value="0">JDISABLED</option>
				</field>
				
				<field name="profile-require_lastname" type="list"
					description="PLG_USER_PROFILESTIVOLE_FIELD_LASTNAME_DESC"
					label="PLG_USER_PROFILESTIVOLE_FIELD_LASTNAME_LABEL">
					<option value="2">JOPTION_REQUIRED</option>
					<option value="1">JOPTION_OPTIONAL</option>
					<option value="0">JDISABLED</option>
				</field>
 
				<field name="profile-require_tshirtsize" type="list"
					description="PLG_USER_PROFILESTIVOLE_FIELD_TSHIRTSIZE_DESC"
					label="PLG_USER_PROFILESTIVOLE_FIELD_TSHIRTSIZE_LABEL">
					<option value="2">JOPTION_REQUIRED</option>
					<option value="1">JOPTION_OPTIONAL</option>
					<option value="0">JDISABLED</option>
				</field>
 
				<field name="profile-require_campingPlace" type="list"
					description="PLG_USER_PROFILESTIVOLE_FIELD_CAMPINGPLACE_DESC"
					label="PLG_USER_PROFILESTIVOLE_FIELD_CAMPINGPLACE_LABEL">
					<option value="2">JOPTION_REQUIRED</option>
					<option value="1">JOPTION_OPTIONAL</option>
					<option value="0">JDISABLED</option>
				</field>
			
			<field name="profile-require_sex" type="list"
					description="PLG_USER_PROFILESTIVOLE_FIELD_SEX_DESC"
					label="PLG_USER_PROFILESTIVOLE_FIELD_SEX_LABEL">
					<option value="2">JOPTION_REQUIRED</option>
					<option value="1">JOPTION_OPTIONAL</option>
					<option value="0">JDISABLED</option>
				</field>
			</fieldset>
 
		</fields>
	</config>
 </extension>